<h1>edit {{department.name}}</h1>

<form action="/departments/{{department._id}}?_method=PUT" method="POST">

    {{!-- name --}}
    <div>
        <label for=""> Name </label>
        <input value="{{department.name}}"  type="text" class="form-control" name="name">

    </div>


    {{!-- code --}}
    <div>
        <label for=""> Code </label>
        <input value="{{department.code}}" type="text" class="form-control" name="code">

    </div>

    {{!-- save button --}}
    <div class="mt-3">
        <button class="btn btn-success" type="submit"> Save</button>
    </div>


</form>